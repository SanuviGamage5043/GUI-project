<Window x:Class="WpfApp_gui.UserInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_gui"
        mc:Ignorable="d"
        Title="UserInfoWindow" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Useraname"
                   Grid.Row="0"
                   FontSize="20"
                   Padding="20"
                   Margin="10"/>

        <TextBox Grid.Row="1"
                 HorizontalAlignment="Left"
                 Margin="150,0,0,0"
                 Padding="10"
                 Width="500"
                 Height="45"
                 Background="LightGray"
                 x:Name="UsernameTextBox"/>

        <TextBlock Text="Password"
                   Grid.Row="2"
                   FontSize="20"
                   Padding="20"
                   Margin="10"/>
        <TextBox   Grid.Row="3"
                   HorizontalAlignment="Left"
                   Margin="150,0,0,0"
                   Padding="10"
                   Width="500"
                   Height="45"
                   Background="LightGray"
                   x:Name="PasswordTextBox"/>
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Grid.Row="4"
                    Width="150"
                    Height="50"
                    Background="LightBlue"
                    FontSize="30"
                    FontWeight="Bold"
                    Margin="10"
                    Padding="5"
                    Click="Save_info">
                    Save
            </Button>

            <Button Grid.Row="4"
                    Width="150"
                    Height="50"
                    Background="LightBlue"
                    FontSize="30"
                    FontWeight="Bold"
                    Margin="10"
                    Padding="5"
                    Click="Cancel_info">
                    Cancel
            </Button>

        </StackPanel>
        

    </Grid>
</Window>
